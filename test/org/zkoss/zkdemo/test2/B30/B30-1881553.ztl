<test tags="Tabbox">
	<case id="HeightOperating">
		<server><!--
			<window>
				The tabbox's height shall be changed accordingly.
				<tabbox id="t" width="400px">
					<tabs>
						<tab label="Tab 1"/>
						<tab label="Tab 2"/>
					</tabs>
					<tabpanels>
						<tabpanel>This is panel 1</tabpanel>
						<tabpanel>This is panel 2</tabpanel>
					</tabpanels>
				</tabbox>
				<button id="oneHd" label="100" onClick='t.height = "100px"'/>
				<button id="twoHd" label="200" onClick='t.height = "200px"'/>
				<button id="threeHd" label="300" onClick='t.height = "300px"'/>
			</window>
		--></server>
		<client><![CDATA[
			sleep(3000);
			click(oneHd);
			waitResponse();
			sleep(3000);
			verifyEquals(100, jq(t).height());
			
			click(twoHd);
            waitResponse();
            sleep(3000);
            verifyEquals(200, jq(t).height());
            
            click(threeHd);
            waitResponse();
            sleep(3000);
            verifyEquals(300, jq(t).height());
		]]></client>
	</case>
</test>
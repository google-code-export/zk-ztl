<test tags="B30-1968667.zul,Listbox,Checkmark,IE">
	<case id="ztl">
		<server><!--
			


<zk xmlns:n="http://www.zkoss.org/2005/zk/native">
<n:ul>
<n:li>when click button and select item2 then hide popup</n:li>	
<n:li>again click button and the popup show and item2 should be selected (IE only) </n:li>
</n:ul>
<popup id="p">
<listbox width="300px" multiple="false" checkmark="true">
<listitem label="item1"/>
<listitem label="item2"/>
</listbox>
</popup>
<button label="popup" onClick="p.open(self)"/>
</zk>

		--></server>
		<client><![CDATA[
			click(jq("@button"));
				waitResponse();
				click(jq(".z-listcell-cnt:eq(0)"));
				clickAt(jq("li"),"1,1"); // to blur

				click(jq("@button"));
				verifyTrue(jq(".z-listitem-seld").exists());
				verifyEquals("Â item1",jq(".z-listitem-seld").text());
				verifyTrue(jq(".z-listitem-img-radio:eq(0)").is("checked"));
		]]></client>
	</case>
</test>
				  <listheader width="125px" label="Id4" />
			    </listhead>
			    <listitem height="20px">
				  <listcell label="label1" />
				  <listcell label="label2" />
				  <listcell label="label3" />
				  <listcell label="label4" />
			    </listitem>
			  </listbox>
		      <paging pageSize="20" />
            </vbox>
          </vbox>	
		</tabpanel>
        <tabpanel hflex="1" vflex="1">
        	Panel 2
        </tabpanel>
	  </tabpanels>
	</tabbox>
  </vbox>
</window>

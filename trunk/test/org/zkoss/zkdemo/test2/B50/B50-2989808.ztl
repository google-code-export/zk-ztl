<test tags="decimalbox">
	<case id="Format">
		<server><!--
		<zk>
			<decimalbox id="d1" format="#####.0##%" value="123.456"/>
			<decimalbox id="d2" format="##0.##%" value="123"/>
			<decimalbox id="d3" width="150px" format="R ##,###,###,###.00%" value="123456"/>
			<decimalbox id="d4" width="150px" format="#,###,###.00%" value="123456"/>			
		</zk>

		--></server>
		<client>
			assertEquals("12345.6%", jq(d1).val());
			assertEquals("12300%", jq(d2).val());
			assertEquals("R 12,345,600.00%", jq(d3).val());
			assertEquals("12,345,600.00%", jq(d4).val());
			
			focus(d1);
			blur(d1);
			assertEquals("12345.6%", jq(d1).val());
			
			focus(d2);
			blur(d2);
			assertEquals("12300%", jq(d2).val());
			
			focus(d3);
			blur(d3);
			assertEquals("R 12,345,600.00%", jq(d3).val());
			
			focus(d4);
			blur(d4);
			assertEquals("12,345,600.00%", jq(d4).val());
		</client>
	</case>
</test>
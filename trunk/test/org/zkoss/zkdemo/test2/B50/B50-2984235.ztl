<test tags="combobox,textbox">
	<case id="popup">
		<server id="zul"><![CDATA[
			<zk>
				<textbox id="tb" tooltip="popup" />
				<combobox id="cb" tooltip="popup"/>
				<popup id="popup"/>
			</zk>
		]]></server>
		<client><![CDATA[
			Element tbNode = tb.$n();
			mouseOver(tbNode);
			try {
		     Thread.sleep(2000);
		    } catch (InterruptedException e) {
		     e.printStackTrace();
		    }
			assertTrue(popup.exists());
			mouseOut(tbNode);
			mouseOver(cb.$n());
			assertTrue(popup.exists());
		]]></client>
	</case>
</test>
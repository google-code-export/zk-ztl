<test tags="menu">
	<case id="ChangeIcon">
		<server id="zul"><![CDATA[
			<zk>
				<button id="btn" label="change label" onClick='treecell.label="new Name"' />
				<tree>
					<treechildren>
						<treeitem>
							<treerow id="treerow">
								<treecell label="Item" id="treecell" />
							</treerow>
							<treechildren>
								<treeitem>
									<treerow>
										<treecell label="Item 1" />
									</treerow>
								</treeitem>
							</treechildren>
						</treeitem>
					</treechildren>
				</tree>
			</zk>
		]]></server>
		<client wait="100"><![CDATA[
			Element openIcon = treerow.$n("open");
			click(openIcon);
			click(btn);
			click(openIcon);
			assertTrue(jq(openIcon).hasClass("z-tree-root-open"));			
		]]></client>
	</case>
</test>
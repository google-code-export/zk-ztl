<test tags="B36-2786500.zul,A,E,Menupopup">
	<case id="ztl">
		<server><!--
			


<zk>
	Please press both labels, and they should work well.
<vbox>
<label value="Click 1" id="banan" onClick="title.open(title)"
/>
<label value="Click 2" popup="title" />
</vbox>
<menupopup id="title" >
<menuitem label="test"/>
</menupopup>
</zk> 

		--></server>
		<client><![CDATA[
			
			JQuery labels = jq("@label");
			JQuery menuitem = jq("@menuitem");
			
			click(labels.get(1));
			waitResponse();
			verifyTrue(menuitem.isVisible());
			
			clickAt(jq("body"),"100,100");
			waitResponse();
			verifyFalse(menuitem.isVisible());
			
			click(labels.get(2));
			waitResponse();
			verifyTrue(menuitem.isVisible());
	
		]]></client>
	</case>
</test>
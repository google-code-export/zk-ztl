<test tags="Tabbox,Grid,Combobox">
	<case id="ForEach">
		<server><!--
<window>
If the popup of combox out of position, that is wrong.
	<tabbox width="100%">
		<tabs>
			<tab label="Geral" />
		</tabs>
		<tabpanels>
			<tabpanel height="240px">
				<grid>
					<rows>
						<row>
							<combobox id="cb" width="150px" readonly="true">
								<comboitem label="Pessoa Física" />
								<comboitem label="Pessoa Jurídica" />
							</combobox>
						</row>
					</rows>
				</grid>
			</tabpanel>

		</tabpanels>
	</tabbox>
</window>
		--></server>
		<client><![CDATA[
		String[] offset1 = zk(cb).revisedOffset();
		click(cb.$n("btn"));
		String[] offset2 = zk(cb.$n("pp")).revisedOffset();
		if (ZK.is("ie6_")) {
			assertEquals(parseInt(offset1[0]), parseInt(offset2[0]));
			assertEquals(parseInt(offset1[1]) + parseInt(jq(cb).outerHeight()) - 1, parseInt(offset2[1]));
		} else {
			assertEquals(offset1[0], offset2[0]);
			assertEquals(parseInt(offset1[1]) + parseInt(jq(cb).outerHeight()), parseInt(offset2[1]));
		}
		]]></client>
	</case>
</test>
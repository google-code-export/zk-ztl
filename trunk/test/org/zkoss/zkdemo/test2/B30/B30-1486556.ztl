<test tags="textbox,button,constraint,focus">
	<case id="Constraint1">
		<server id="zulCode"><!--
			<zk>
				<textbox constraint="/.+@.+\.[a-z]+/: Invalid e-mailaddress" id="tb" />
				<button id="btn" label="check" onClick="checkDate()" />
			</zk>
		--></server>
		<server id="javaCode" lang="java">
		void checkDate() {
			tb.getValue();
		}
		</server>
		<client>
			focus(tb.$n());
			blur(tb);
			sleep(200);
			verifyTrue(jq(tb).hasClass("z-textbox-text-invalid"));
		</client>
	</case>
	<case id="Constraint2">
		<server ref="zulCode"/>
		<server ref="javaCode"/>
		<client>
			focus(tb.$n());
			click(btn);
			waitResponse();
			verifyTrue(jq(tb).hasClass("z-textbox-text-invalid"));
		</client>
	</case>
</test>
<test tags="Borderlayout">
	<case id="testRun">
		<server><!--
			


<borderlayout height="500px">
	<north  id="west" visible="false" maxsize="300" size="50%" splittable="true" collapsible="true">
	</north>
	<center border="0">
		
<button label="Click me, then you should see the North region." onClick='west.visible = !west.visible'/>
	</center>
</borderlayout>

		--></server>
		<client><![CDATA[
			verifyFalse("jq(\"$west\").visible is true!", jq(west).isVisible());
			click(jq("button"));
			waitResponse();
			verifyTrue("jq(\"$west\") is not found.", jq(west).isVisible());
		]]></client>
	</case>
</test>